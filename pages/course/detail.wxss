/* pages/course/detail.wxss */
page {
  background: #fff;
}

/*用户信息*/
.topbgv {
  width: 100vw;
  height: 422rpx;
  background: url(https://t7.baidu.com/it/u=1819248061,230866778&fm=193&f=GIF) no-repeat;
  background-size: cover;
}

.topbgv .pagetitlev {
  width: 555rpx;
  height: 60rpx;
  display: flex;
  padding-left: 32rpx;
}

.topbgv .backiconv {
  width: 70rpx;
  height: 60rpx;
}

.topbgv .backicon {
  width: 27rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-top: 8rpx;
}

.topbgv .pagetitle {
  width: 385rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #FFFFFF;
  margin-left: 84rpx;
}

.infov {
  width: 622rpx;
  height: auto;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(0, 0, 0, 0.08);
  border-radius: 10rpx;
  margin: -226rpx auto 0rpx;
  padding: 32rpx 32rpx;
}

.infov .namev {
  margin-bottom: 12rpx;
  display: flex;
}

.infov .namelie {
  width: 5rpx;
  height: 28rpx;
  background: #F24540;
  border-radius: 3rpx;
  margin-right: 12rpx;
  margin-top: 10rpx;
}

.infov .nametxt {
  font-size: 34rpx;
  font-weight: 500;
  color: #262626;
}

.infov .owner {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.infov .desc {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #666666;
}

.tabv {
  display: flex;
  justify-content: space-between;
  width: 686rpx;
  margin: 40rpx auto 20rpx;
}

.tabv .tabitem {
  width: 212rpx;
  height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.tabv .tabitem1 {
  background: linear-gradient(135deg, #5784FF 0%, #285AE3 100%);
}

.tabv .tabitem2 {
  background: linear-gradient(135deg, #FFBA4F 0%, #E99512 100%);
}

.tabv .tabitem3 {
  background: linear-gradient(135deg, #44D97C 0%, #18C359 100%);
}

.bodyv {
  padding: 0 32rpx;
}

.kindv {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #262626;
}

.demandtxtv {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}

.demandtxt {
  max-width: 500rpx;
  font-size: 28rpx;
  color: #262626;
}

.demandstatus {
  font-size: 24rpx;
  color: #262626;
}

.demandstatush {
  font-size: 24rpx;
  color: #666666;
}

.finishbtnv {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.finishbtn {
  width: 264rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #F7F7F7;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}

.finishbtnl {
  display: flex;
}

.finishbtnicon {
  margin-top: calc(44rpx - 14px);
  margin-right: 8rpx;
}

.finishbtntxt {
  font-size: 28rpx;
  color: #666666;
  line-height: 88rpx;
}

.finishnum {
  font-size: 28rpx;
  color: #262626;
}

.finishunit {
  font-size: 20rpx;
  color: #666666;
}

.tagtxt {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #999999;
}

.userv {
  display: flex;
  flex-wrap: wrap;
}

.userc {
  height: 56rpx;
  background: #F7F7F7;
  border-radius: 6rpx;
  margin-right: 32rpx;
  padding: 0 20rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #262626;
  margin-bottom: 28rpx;
}

.uploadbtn {
  width: 548rpx;
  height: 96rpx;
  background: #F24540;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin: 60rpx auto 168rpx;
  text-align: center;
  line-height: 96rpx;
}

.btmvv {
  width: 100vw;
  height: 108rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btmv {
  width: 100vw;
  height: 108rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-top: 1rpx solid #eee;
}

.btmc {
  width: 180rpx;
  height: 108rpx;
  text-align: center;
  line-height: 108rpx;
}

.btmctxth {
  font-size: 30rpx;
  font-weight: 500;
  color: #262626;
}
.btmctxt {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
}

.btmcline {
  width: 28rpx;
  height: 4rpx;
  background: #F24540;
  border-radius: 3rpx;
  margin: -20rpx auto;
}
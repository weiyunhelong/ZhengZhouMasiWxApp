<!--pages/course/book.wxml-->
<view class="hangv">
  <view class="hangtag">姓名</view>
  <view class="hangval">
    <input type="text" placeholder="请输入你的姓名" placeholder-class="tipcss" class="txtcss" value="{{name}}" bindinput="getName"/>
  </view>
</view>
<view class="hangv">
  <view class="hangtag">手机号</view>
  <view class="hangval">
    <input type="number" maxlength="11" placeholder="请输入你的手机号码" placeholder-class="tipcss" class="txtcss" value="{{phone}}" bindinput="getPhone"/>
  </view>
</view>

<view class="btnv">
  <view class="btn" bindtap="postOpt">确认报名</view>
</view>
  background: rgba(14, 14, 14, 0.4);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 2;
  top: -44rpx;
  left: 86rpx;
}

.xscrollview .voiceicon {
  width: 16rpx;
  height: 16rpx;
  margin-top: 6rpx;
  margin-right: 4rpx;
}

.xscrollview .numbertxt {
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #FFFFFF;
}

.xscrollview .xscrollviewname {
  font-size: 30rpx;
  color: #262626;
  margin-top: -28rpx;
}

.xscrollviewnull {
  width: 30rpx;

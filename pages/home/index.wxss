/*分类部分*/
.categoryv {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 32rpx 0;
  height: 100rpx;
  line-height: 100rpx;
}

.categoryv .categoryvl {
  display: flex;
}

.categoryv .categoryvlie {
  width: 5rpx;
  height: 28rpx;
  background: #F24540;
  border-radius: 3rpx;
  margin-top: 36rpx;
  margin-right: 10rpx;
}

.categoryv .categoryvtxt {
  font-size: 34rpx;

<!--pages/sijiang/index.wxml-->
<!--顶部用户信息-->
<view class="topbgv">
  <view style="width: 100vw;height:{{navigationBarHeight}}px;margin-bottom: 10rpx;"></view>
  <view class="pagetitlev">
    <view class="backiconv" bindtap="goBackOpt">
      <image src="/resources/comman/backiconw.png" class="backicon"></image>
    </view>
    <view class="pagetitle">四史天天讲</view>
  </view>
</view>

<scroll-view scroll-y="true" class="datalistv">

  <!--banner部分-->
  <view class="bannerv" bindtap="goSystem">
    <image lazy-load="true" class="banner" src="https://zhengzhousizheng.oss-cn-beijing.aliyuncs.com/zhengzhouv2/homebanner.png"></image>
  </view>

  <block wx:for="{{list}}" wx:key="item">
    <view class="datav" bindtap="goDetail" data-id="{{item.ID}}">
      <image mode="aspectFill" lazy-load="true" src="/resources/comman/avatarUrl.jpg" class="datacover"></image>
      <view class="datac">
        <view class="dataname showOnehangTxt">听到，知道，悟到，做到听到，知道，悟到，做到</view>
        <image src="/resources/home/lefttop.png" class="lefttopicon"></image>
        <view class="datadescv">
          <view class="datadesc showTwohangTxt">那些更棒的点子来自于个体依然用过去习惯的方式思考创意时——坐在意时——坐在</view>
        </view>
        <image src="/resources/home/rightbtm.png" class="rightbtmicon"></image>
      </view>
    </view>
  </block>

</scroll-view>
<!--pages/sijiang/index.wxml-->
<!--顶部用户信息-->
<view class="topbgv">
  <view style="width: 100vw;height:{{navigationBarHeight}}px;margin-bottom: 10rpx;"></view>
  <view class="pagetitlev">
    <view class="backiconv" bindtap="goBackOpt">
      <image src="/resources/comman/backiconw.png" class="backicon"></image>
    </view>
    <view class="pagetitle">四史天天讲</view>
  </view>
</view>

<scroll-view scroll-y="true" class="datalistv" bindscrolltoupper="ShowMoreData">

  <!--banner部分-->
  <view class="bannerv">
    <image lazy-load="true" class="banner" src="https://zhengzhousizheng.oss-cn-beijing.aliyuncs.com/bannerimgv/%E5%9B%9B%E5%8F%B2.png"></image>
  </view>

  <block wx:for="{{list}}" wx:key="item">
    <view class="datav" bindtap="goDetail" data-id="{{item.ID}}">
      <image mode="aspectFill" lazy-load="true" src="{{item.Thumbnail}}" class="datacover"></image>
      <view class="datac">
        <view class="dataname showOnehangTxt">{{item.Title}}</view>
        <image src="/resources/home/lefttop.png" class="lefttopicon"></image>
        <view class="datadescv">
          <view class="datadesc showTwohangTxt">{{item.Summarize}}</view>
        </view>
        <image src="/resources/home/rightbtm.png" class="rightbtmicon"></image>
      </view>
    </view>
  </block>

</scroll-view>

<!--loadding 加载-->
<loadding showloadingMask="{{showloadingMask}}"/>
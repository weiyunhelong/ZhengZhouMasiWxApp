/* pages/shidu/index.wxss */
.recentv {
  width: 100vw;
  height: 550rpx;
  background: linear-gradient(90deg, #124361 0%, #0D6675 100%);
  border-radius: 0rpx 0rpx 50rpx 0rpx;
}

.liev {
  display: flex;
  padding: 30rpx 20rpx 38rpx;
}

.lieicon {
  width: 10rpx;
  height: 30rpx;
  background: #FFFFFF;
  border-radius: 5rpx;
  margin-right: 20rpx;
}

.lietxt {
  line-height: 1;
  font-size: 30rpx;
  color: #FFFFFF;
}

.recentc {
  display: flex;
  padding: 0 20rpx;
}

.recentcover {
  width: 223rpx;
  height: 281rpx;
  border-radius: 4rpx;
  margin-right: 52rpx;
}

.recentname {
  padding-top: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.recentdesc {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #FFFFFF;
}

.recentoptv {
  display: flex;
  font-size: 26rpx;
  color: #FFFFFF;
  line-height: 1;
  margin-top: 30rpx;
}

.erjiicon {
  width: 21rpx;
  height: 21rpx;
  margin-top: 4rpx;
  margin-right: 10rpx;
}

.xingicon {
  width: 26rpx;
  height: 24rpx;
  margin-right: 10rpx;
  margin-left: 40rpx;
}

.recentjinduv {
  display: flex;
  padding-top: 34rpx;
}

.progressv {
  width: 250rpx;
  height: 18rpx;
  margin-top: 5rpx;
}

.shichang {
  margin-left: 22rpx;
  font-size: 22rpx;
  color: #FFFFFF;
}
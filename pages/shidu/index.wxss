/* pages/shidu/index.wxss */
page{
  background: #fff;
}
/*用户信息*/
.topbgv {
  width: 100vw;
  height: 356rpx;
  background: url(https://zhengzhousizheng.oss-cn-beijing.aliyuncs.com/zhengzhouv2/topbg.png) no-repeat;
  background-size: cover;
  position: sticky;
  top: 0;
  left: 0;
}

.topbgv .pagetitlev {
  width: 555rpx;
  height: 60rpx;
  display: flex;
  padding-left: 32rpx;
}

.topbgv .backiconv {
  width: 70rpx;
  height: 60rpx;
}

.topbgv .backicon {
  width: 27rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-top: 8rpx;
}

.topbgv .pagetitle {
  width: 385rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #FFFFFF;
  margin-left: 84rpx;
}


/*顶部的banner*/
.datalistv {
  width: 100vw;
  height: calc(100vh - 186rpx);
  margin-top: -180rpx;
}
.bannerv {
  width: 100vw;
  height: 240rpx;
  text-align: center;
  margin-bottom:20rpx;
}

.banner {
  width: 686rpx;
  height: 240rpx;
  margin: 0 auto;
}

/*分类部分*/
.categoryv {
  display: flex;
  justify-content: space-between;
  margin: 0rpx 32rpx 0;
  height: 100rpx;
  line-height: 100rpx;
}

.categoryv .categoryvl {
  display: flex;
}

.categoryv .categoryvlie {
  width: 5rpx;
  height: 28rpx;
  background: #F24540;
  border-radius: 3rpx;
  margin-top: 36rpx;
  margin-right: 10rpx;
}

.categoryv .categoryvtxt {
  font-size: 34rpx;
  font-weight: 500;
  color: #262626;
}

.categoryv .categoryvr {
  display: flex;
  justify-content: flex-end;
}

.categoryv .categoryvmore {
  font-size: 24rpx;
  color: #262626;
}

.categoryv .righticon {
  width: 12rpx;
  height: 20rpx;
  margin-top: 40rpx;
  margin-left: 8rpx;
}

/*横向滚动*/
.xscrollview {
  padding-left: 32rpx;
  display: flex;
  white-space: nowrap;
  overflow: hidden;
}

.xscrollview .xscrollviewc {
  margin-right: 30rpx;
  width: 180rpx;
  height: auto;
  display: inline-block;
}

.xscrollview .xscrollviewcover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 6rpx;
}

.xscrollview .xscrollviewnumberv {
  width: 82rpx;
  height: 28rpx;
  background: rgba(14, 14, 14, 0.4);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 2;
  top: -44rpx;
  left: 86rpx;
}

.xscrollview .voiceicon {
  width: 16rpx;
  height: 16rpx;
  margin-top: 6rpx;
  margin-right: 4rpx;
}

.xscrollview .numbertxt {
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #FFFFFF;
}

.xscrollview .xscrollviewname {
  font-size: 30rpx;
  color: #262626;
  margin-top: -28rpx;
}

.xscrollviewnull {
  width: 30rpx;
  height: 0;
  display: inline-block;
}

/*创课中心*/
.chuangkev {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 0 32rpx;
}

.chuangkev .chuangkec {
  width: 208rpx;
  height: auto;
  margin-bottom: 30rpx;
}

.chuangkev .chuangkecover {
  width: 208rpx;
  height: 208rpx;
  border-radius: 6rpx;
}

.chuangkev .chuangkenumberv {
  width: 82rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: rgba(14, 14, 14, 0.4);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 2;
  top: -44rpx;
  left: 114rpx;
}

.chuangkev .videoicon {
  width: 12rpx;
  height: 14rpx;
  margin-top: 9rpx;
  margin-right: 4rpx;
}

.chuangkev .numbertxt {
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #FFFFFF;
}

.chuangkev .chuangkename {
  margin-top: -28rpx;
  font-size: 30rpx;
  color: #262626;
}

.chuangkev .chuangketime {
  font-size: 24rpx;
  color: #999999;
  height: 38rpx;
  line-height: 38rpx;
}


/*党史部分*/
.zhuanlanv {
  width: 686rpx;
  height: 208rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  margin: 0 auto;
}
.zhuanlanv .noborder{
  border-bottom: none;
}
.zhuanlanv .zhuanlancover {
  width: 152rpx;
  height: 152rpx;
  border-radius: 6rpx;
  margin-top: 28rpx;
  margin-right: 20rpx;
}

.zhuanlanv .zhuanlanc {
  width: 510rpx;
}

.zhuanlanv .zhuanlanname {
  margin-top: 28rpx;
  font-size: 30rpx;
  color: #262626;
}
.zhuanlanv .zhuanlandesc {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}
.zhuanlanv .zhuanlannumv {
  font-size: 24rpx;
  color: #999999;
  margin-top: 28rpx;
  display: flex;
}

.voiceicon{
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
  margin-top: 6rpx;
}
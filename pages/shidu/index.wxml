<!--pages/shidu/index.wxml-->
<!--顶部用户信息-->
<view class="topbgv">
  <view style="width: 100vw;height:{{navigationBarHeight}}px;margin-bottom: 10rpx;"></view>
  <view class="pagetitlev">
    <view class="backiconv" bindtap="goBackOpt">
      <image src="/resources/comman/backiconw.png" class="backicon"></image>
    </view>
    <view class="pagetitle">红色时时读</view>
  </view>
</view>

<scroll-view scroll-y="true" class="datalistv">

  <!--banner部分-->
  <view class="bannerv">
    <image lazy-load="true" class="banner" src="https://zhengzhousizheng.oss-cn-beijing.aliyuncs.com/bannerimgv/%E7%BA%A2%E8%89%B2%E6%97%B6%E6%97%B6%E8%AF%BB.png"></image>
  </view>

  <!--分类部分-->


  <block wx:for="{{tabs}}" wx:key="item" wx:for-index="x">

    <!--分类部分-->
    <view class="categoryv" bindtap="tapMenu" data-menu="{{item}}">
      <view class="categoryvl">
        <view class="categoryvlie"></view>
        <view class="categoryvtxt">{{item.Value}}</view>
      </view>
      <view class="categoryvr">
        <view class="categoryvmore">更多</view>
        <image src="/resources/comman/right.png" class="righticon"></image>
      </view>
    </view>

    <!--类型1，小模块部分-->
    <view class="chuangkev" wx:if="{{x%2==0}}">
      <block wx:for="{{item.list}}" wx:key="citem" wx:for-item="citem">
        <view class="chuangkec" bindtap="goDetail" data-id="{{citem.ID}}">
          <image mode="aspectFill" lazy-load="true" src="{{citem.Thumbnail}}" class="chuangkecover"></image>
          <view class="chuangkenumberv">
            <image src="/resources/home/video.png" class="videoicon"></image>
            <view class="numbertxt">{{citem.PlayNum}}播放</view>
          </view>
          <view class="chuangkename showOnehangTxt">{{citem.Name}}</view>
        </view>
      </block>
    </view>

    <!--类型2，大模块部分-->
    <block wx:else>
      <block wx:for="{{item.list}}" wx:key="citem" wx:for-item="citem">
        <view class="zhuanlanv" bindtap="goDetail" data-id="{{citem.ID}}">
          <image mode="aspectFill" lazy-load="true" src="{{citem.Thumbnail}}" class="zhuanlancover"></image>
          <view class="zhuanlanc">
            <view class="zhuanlanname showOnehangTxt">{{citem.Name}}</view>
            <view class="zhuanlandesc showOnehangTxt">{{citem.Introduce}}</view>
            <view class="zhuanlannumv">
              <image src="/resources/home/listen.png" class="voiceicon"></image>
              <view class="zhuanlannum">{{citem.PlayNum}}播放</view>
            </view>
          </view>
        </view>
      </block>
    </block>

  </block>

</scroll-view>

<!--loadding 加载-->
<loadding showloadingMask="{{showloadingMask}}"/>
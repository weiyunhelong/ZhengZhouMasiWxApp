<!--pages/jiyin/list.wxml-->
<!--顶部用户信息-->
<view class="topbgv">
  <view style="width: 100vw;height:{{navigationBarHeight}}px;margin-bottom: 10rpx;"></view>
  <view class="pagetitlev">
    <view class="backiconv" bindtap="goBackOpt">
      <image src="/resources/comman/backiconw.png" class="backicon"></image>
    </view>
    <view class="pagetitle">{{pagetitle}}</view>
  </view>
</view>

<!--banner部分-->
<view class="bannerv" bindtap="goSystem">
  <image lazy-load="true" class="banner" src="https://zhengzhousizheng.oss-cn-beijing.aliyuncs.com/zhengzhouv2/homebanner.png"></image>
</view>

<!--探寻红色基因-->
<block wx:for="{{list}}" wx:key="item" wx:for-index="x">
  <view class="jiyinv" bindtap="goJiYinOpt" data-index="{{x}}">
    <image mode="aspectFill" lazy-load="true" src="{{item.Thumbnail}}" class="jiyincover"></image>
    <view class="jiyinc">
      <view class="jiyinname">{{item.Name}}</view>
      <view class="jiyinnumv">{{item.BrowseNum}}浏览 · {{item.LikesNum}}点赞 · {{item.ShareNum}}收藏</view>
    </view>
  </view>
</block>

<!--loadding 加载-->
<loadding showloadingMask="{{showloadingMask}}"/>
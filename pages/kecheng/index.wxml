<!--pages/kecheng/index.wxml-->
<!--顶部用户信息-->
<view class="topbgv">
  <view style="width: 100vw;height:{{navigationBarHeight}}px;margin-bottom: 10rpx;"></view>
  <view class="pagetitlev">
    <view class="backiconv"></view>
    <view class="pagetitle">创课中心</view>
  </view>
</view>

<!--tab部分-->
<view class="tabv">
  <view class="tabitem" bindtap="tapTab" data-tab="1">
    <view class="{{chktab==1?'tabtxth':'tabtxt'}}">视频</view>
    <view class="tabline" wx:if="{{chktab==1}}"></view>
  </view>
  <view class="tabitem" bindtap="tapTab" data-tab="0">
    <view class="{{chktab==0?'tabtxth':'tabtxt'}}">专栏</view>
    <view class="tabline" wx:if="{{chktab==0}}"></view>
  </view>
</view>

<scroll-view scroll-y="true" class="datalistv">

  <!--banner部分-->
  <view class="bannerv" bindtap="goSystem">
    <image lazy-load="true" class="banner" src="https://zhengzhousizheng.oss-cn-beijing.aliyuncs.com/zhengzhouv2/homebanner.png"></image>
  </view>

  <!--视频数据部分-->
  <block wx:if="{{chktab==1}}">
    <view class="videolistv">
      <block wx:for="{{list}}" wx:key="item">
        <view class="videov" bindtap="goDetail" data-id="{{item.ID}}">
          <image mode="aspectFill" lazy-load="true" src="{{item.Thumbnail}}" class="videocover"></image>
          <view class="videonumv">
            <image src="/resources/home/video.png" class="videoicon"></image>
            <view class="videonum">{{item.PlayNum}}</view>
          </view>
          <view class="videoname showOnehangTxt">{{item.Title}}</view>
          <view class="videotime">时长：19:23</view>
        </view>
      </block>
    </view>
  </block>


  <!--专栏数据部分-->
  <block wx:if="{{chktab==0}}">
    <block wx:for="{{list}}" wx:key="item">
      <view class="zhuanlanv" bindtap="goDetail" data-id="{{item.ID}}">
        <image mode="aspectFill" lazy-load="true" src="{{item.Thumbnail}}" class="zhuanlancover"></image>
        <view class="zhuanlanc">
          <view class="zhuanlanname showOnehangTxt">{{item.Title}}</view>
          <view class="zhuanlandesc showOnehangTxt">{{item.LabelName}}</view>
          <view class="zhuanlannumv">
            <image src="/resources/home/listen.png" class="voiceicon"></image>
            <view class="zhuanlannum">{{item.PlayNum}}播放</view>
          </view>
        </view>
      </view>
    </block>
  </block>

  <view class="tabbarv"></view>
</scroll-view>
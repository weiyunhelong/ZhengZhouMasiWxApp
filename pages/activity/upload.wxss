}

.formhangv {
  padding: 32rpx 32rpx 0;
}

.txtcss {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #262626;
}

.textarea {
  width: 100%;
  height: 35vh;
  font-size: 28rpx;
  color: #262626;
}

.tipcss {
  color: #999;
}

.hangv {
  height: 120rpx;
  line-height: 120rpx;
  margin: 0 32rpx;
  display: flex;
  justify-content: space-between;
}

.hangtag {
  font-size: 32rpx;
  color: #262626;
}

.hangval {
  font-size: 28rpx;
  color: #999999;
}
.hangval text{
  color: #F24540;
}
.formline {
  width: 686rpx;
  height: 2rpx;
  background: #EEEEEE;
  margin: 0 auto;
}

.textcss {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #262626;
}

.textarea2 {
  margin: 0 32rpx;
  font-size: 28rpx;
  color: #262626;
  width: 686rpx;
  height: 320rpx;
}

.btmvv {
  width: 100vw;
  height: 108rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btmv {
  width: 100vw;
  height: 108rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.cancelbtn {
  width: 200rpx;
  height: 92rpx;
  background: #F7F7F7;
  border-radius: 46rpx;
  margin-top: 8rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 32rpx;
  color: #666666;
}

.formbtn {
  width: 466rpx;
  height: 92rpx;
  background: rgba(242, 69, 64,1);
  border-radius: 46rpx;
  margin-top: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  line-height: 92rpx;
}

.imgv {
  padding-left: 32rpx;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 14rpx;
}

.imgv .imgc {
  width: 126rpx;
  height: 128rpx;
  border-radius: 12rpx;
  margin-right: 14rpx;
  position: relative;
}
.imgv .img{
  width: 100%;
  height:100%;
  border-radius: 12rpx;
}
.imgv .deletev{
  width: 100%;
  height: 50rpx;
  position: absolute;
  bottom: -5rpx;
  left: 0rpx;
  text-align: center;
}
.imgv .deleteicon{
  width: 32rpx;
  height: 32rpx;
}
.imgdesv{
  margin: 0 32rpx;
  height: 200rpx;
}
.imgdesc{
  padding:20rpx 0;
  height: 160rpx;
  font-size: 28rpx;
  color: #262626;
}
/**app.wxss**/
page {
  background: #f7f7f7;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}


/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*文字超过1行隐藏显示点点*/
.onehide {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/*底线提示*/
.bottomlinev {
  width: 170rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 24rpx;
  margin: 0rpx auto;
  display: flex;
  padding: 32rpx 0;
}

.btmline {
  display: inline-block;
  width: 10rpx;
  border-top: 1px solid #333;
  margin-top: 21rpx;
}

.btmtxt {
  color: #333;
  width: 150rpx;
  margin-top: -25rpx;
  font-size: 24rpx;
}

/*loadding加载*/

.bottomloaddingv {
  width: 100vw;
  height: 60rpx;
  text-align: center;
}

.loadinggif {
  width: 80rpx;
  height: 20rpx;
  margin: 20rpx auto;
}

/* 清除浮动 */
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

scroll-view {
  box-sizing: border-box;
}

.tabbarv {
  width: 100vw;
  height: 80px;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/*文字超过1行隐藏显示点点*/
.showOnehangTxt {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*文字超过2行隐藏显示点点*/
.showTwohangTxt {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*文字超过3行隐藏显示点点*/
.showThreehangTxt {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}

/*文字超过4行隐藏显示点点*/
.showFourehangTxt {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  line-clamp: 4;
  -webkit-box-orient: vertical;
}

.nodatav {
  width: 100%;
  height: 50vh;
  line-height: 50vh;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}
<!--chat/pages/chat/set.wxml-->
<view class="topborderv"></view>

<view class="viewv">
  <view class="viewtag">讨论头像</view>
  <view class="viewval">
    <image src="{{dataobj.GroupImg}}" mode="aspectFill" class="logoicon"></image>
    <image src="https://idcardassets.oss-cn-shanghai.aliyuncs.com/assets/right.png" class="righticon"></image>
  </view>
</view>
<view class="viewv">
  <view class="viewtag">讨论名称</view>
  <view class="viewval">
    <view class="viewtxt">{{dataobj.Title}}</view>
    <image src="https://idcardassets.oss-cn-shanghai.aliyuncs.com/assets/right.png" class="righticon"></image>
  </view>
</view>
<view class="kongv"></view>
<view class="titlev">
  <text>讨论成员</text>
  <text>{{dataobj.groupitems}}</text>
</view>
<view class="listv" style="max-height:{{IsShowAll?'auto':'720rpx'}};">
  <block wx:for="{{list}}" wx:key="item" wx:for-index="x">
    <view class="blockv" wx:if="{{!IsShowAll&&x<18||IsShowAll}}">
      <image src="{{item.UserPic}}" mode="aspectFill" class="avatar"></image>
      <view class="username showOnehangTxt">{{item.UserName}}</view>
    </view>
  </block>
  <view class="blockv"  bindtap="memberOpt" data-type="1">
      <image src="../../resources/adduser.png" mode="aspectFill" class="avatar"></image>
      <view class="username showOnehangTxt">新增</view>
    </view>
    <view class="blockv" bindtap="memberOpt" data-type="2" wx:if="{{dataobj.UserType==1}}">
      <image src="../../resources/adduser.png" mode="aspectFill" class="avatar"></image>
      <view class="username showOnehangTxt">移除</view>
    </view>
</view>
<view class="viewbtnv"  bindtap="ShowMoreOpt" wx:if="{{list.length>=18}}">
  <view class="viewbtntxt">{{IsShowAll?'收取':'查看全部'}}</view>
  <image src="/resources/comman/downicon.png" class="downicon"></image>
</view>
<view class="kongv"></view>
<view class="btmv">
  <view class="btn" bindtap="jiesanOpt" wx:if="{{dataobj.UserType==1}}">解散讨论组</view>
  <view class="btn" bindtap="outOpt" wx:if="{{dataobj.UserType!=1}}">退出讨论组</view>
</view>

<!--loadding 加载 wx:if="{{list.length>12}}"-->
<loadding showloadingMask="{{showloadingMask}}" />
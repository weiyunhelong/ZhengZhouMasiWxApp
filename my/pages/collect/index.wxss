/* my/pages/collect/index.wxss */
page {
  background: #fff;
}

.tabv {
  width: 100vw;
  height: 88rpx;
  display: flex;
  justify-content: space-around;
}

.tabv .tabc {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}

.tabv .tabtxth {
  font-size: 30rpx;
  font-weight: 500;
  color: #262626;
}
.tabv .tabtxt{
  font-size: 30rpx;
  color: #999999;
}
.tabv .tabline {
  width: 28rpx;
  height: 4rpx;
  background: #F24540;
  border-radius: 3rpx;
  margin: -4rpx auto 0;
}

.blockv {
  width: 686rpx;
  height: 208rpx;
  border-radius: 10rpx;
  margin: 0rpx auto;
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.blockcover {
  width: 274rpx;
  height: 152rpx;
  border-radius: 12rpx;
  margin: 28rpx 20rpx 28rpx 0rpx;
}

.jinduv {
  width: 100%;
  height: 52rpx;
  background: rgba(0, 0, 0, 0.2);
  text-align: center;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  margin-top: 100rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}

.blockc {
  width: 392rpx;
  padding-top: 28rpx;
}

.name {
  height: 84rpx;
  font-size: 30rpx;
  color: #262626;
}

.infov {
  display: flex;
  justify-content: space-between;
  padding-top: 32rpx;
}

.date {
  font-size: 24rpx;
  color: #999999;
}

.percent {
  font-size: 22rpx;
  color: #124361;
}
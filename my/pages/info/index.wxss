.txv {
  width: 100vw;
  height: 200rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
}

.txv .txc {
  display: flex;
}

.txv .txicon {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin: 28rpx 20rpx 28rpx 32rpx;
}

.txv .txtxt {
  height: 200rpx;
  line-height: 200rpx;
  font-size: 32rpx;
  color: #262626;
}

.txv .righticon {
  width: 12rpx;
  height: 20rpx;
  margin-top: 90rpx;
  margin-right: 32rpx;
}

.hangv {
  width: 100vw;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
}

.hangc {
  padding: 0 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
}

.hangc .hangval {
  display: flex;
  justify-content: flex-end;
}

.hangc .hangtxt {
  font-size: 32rpx;
  color: #999999;
  margin-right: 12rpx;
}
.hangc .hangtxtr{
  font-size: 32rpx;
  margin-right: 12rpx;
  color: #F24540;
}
.hangv .righticon {
  width: 12rpx;

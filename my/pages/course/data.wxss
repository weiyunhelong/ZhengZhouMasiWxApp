/* my/pages/course/data.wxss */
.tabv {
  display: flex;
  justify-content: space-around;
  width: 100vw;
  height: 88rpx;
  margin-bottom: 20rpx;
}

.tabv .tabcv {
  display: flex;
  flex-direction: column;
  justify-items: center;
}

.tabv .tabtxth {
  padding-top: 24rpx;
  padding-bottom: 18rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #262626;
}

.tabv .tabtxt {
  padding-top: 24rpx;
  font-size: 30rpx;
  color: #999999;
}

.tabv .tabline {
  width: 28rpx;
  height: 4rpx;
  background: #F24540;
  border-radius: 3rpx;
  margin: 0 auto;
}

/*数据部分*/
.numberv {
  width: 686rpx;
  height: 802rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin: 0 auto;
}

.numberv .numbertitlev {
  line-height: 100rpx;
  height: 100rpx;
  padding: 0 32rpx;
  display: flex;
}

.numberv .numbertitleicon {
  width: 32rpx;
  height: 32rpx;
  margin-top: 34rpx;
  margin-right: 12rpx;
}

.numberv .numbertitletxt {
  font-size: 32rpx;
  font-weight: 500;
  color: #262626;
}

.numberv .numbercv {
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
}

.numberv .numberc {
  width: 342rpx;
  height: 234rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  justify-items: center;
  flex-direction: column;
}

.numberv .numberline {
  width: 1rpx;
  height: 234rpx;
  background-color: #eee;
}

.numberv .numbertag {
  font-size: 28rpx;
  color: #262626;
  padding-left: 32rpx;
}

.numberv .numberval {
  font-size: 48rpx;
  font-weight: 500;
  color: #262626;
  padding-left: 32rpx;
  padding-top: 10rpx;
}

.numberc .numbertoday {
  padding-top: 20rpx;
  padding-left: 32rpx;
  font-size: 28rpx;
  color: #999999;
}

/*数据部分*/

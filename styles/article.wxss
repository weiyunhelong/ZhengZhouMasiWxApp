/*底部操作部分*/
.tabv {
  width: 100vw;
  height: 88rpx;
  display: flex;
  justify-content:space-between;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 999;
  background: #fff;
}

.tabv .tabitem {
  text-align: center;
  line-height: 88rpx;
  width: 50vw;
}

.tabv .tabitem .tabtxth {
  font-size: 30rpx;
  font-weight: 500;
  color: #262626;
}

.tabv .tabitem .tabtxt {
  font-size: 30rpx;
  color: #999999;
}

.tabv .tabitem .tabline {
  width: 28rpx;
  height: 5rpx;
  background: #F24540;
  border-radius: 3rpx;
  margin: -4rpx auto 0;
}
.objinfov{
  width: 100vw;
}
.contentv {
  margin: 32rpx 32rpx;
  font-size: 30rpx;
  color: #262626;
}

.optbtmvv {
  width: 100vw;
  height: 108rpx;
}

.optbtmv {
  width: 100vw;
  height: 108rpx;
  display: flex;
  justify-content: space-around;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  border-top: 1rpx solid #eee;
  background: #fff;
}

.optbtmv .optitem {
  width: 108rpx;
  height: 108rpx;
  background: #FFFFFF;
  text-align: center;
  border: none;
  padding: 0;
  margin: 0;
  background: transparent;
}

.optbtmv .optitem::after {
  border: none;
  padding: 0;
  margin: 0;
}

.optbtmv .optitemshareicon {
  width: 40rpx;
  height: 40rpx;
  margin: 14rpx auto 8rpx;
  display: block;
}

.optbtmv .optitemxiaoxiicon {
  width: 42rpx;
  height: 40rpx;
  margin: 14rpx auto 8rpx;
  display: block;
}

.optbtmv .optitemtxt {
  font-size: 22rpx;
  color: #999999;
}

.optbtmv .optitemtxth {
  font-size: 22rpx;
  color: #F24540;
}

.btmvv {
  width: 100vw;
  height: 108rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btmv {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100vw;
  height: 108rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  justify-content: center;
  border-top: 1rpx solid #eee;
  background: #fff;
}

.textv {
  width: 605rpx;
  height: 80rpx;
  background: #F7F7F7;
  border-radius: 44rpx;
  margin-right: 18rpx;
  margin-top: 14rpx;
}

.sendbtn {
  margin-top: 14rpx;
  width: 80rpx;
  height: 80rpx;
  background: #F24540;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}

.sendicon {
  width: 34rpx;
  height: 35rpx;
  margin: 23rpx auto;
}

.commenttxt {
  padding: 0 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #262626;
}

.commenttip {
  color: #999999;
}

/*评论部分*/
.commentv {
  padding: 0rpx 32rpx 60rpx;
}

.commentv .commentuv {
  display: flex;
  justify-content: space-between;
}

.commentuv .commentul {

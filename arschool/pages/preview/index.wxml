  <view class="maskbodyv">
    <image src="/resources/comman/avatarUrl.jpg" class="maskbodycover"></image>
    <view class="maskbodytxt">AR体验</view>
    <view class="maskbodytip">仅支持到达该路线附近后使用</view>
    <view class="maskbodybtn" catchtap="goMapOpt">知道了</view>

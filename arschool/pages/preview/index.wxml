<!--地图部分-->
<map theme="handDraw" class="map" latitude="39.91381018715938"
longitude="116.39720132367722" scale="15"></map>

<!--POI部分-->
<view class="viewv" bindtap="goArOpt">
  <view class="topv">
    <view class="topl">
      <image src="/resources/comman/avatarUrl.jpg" class="topicon"></image>
      <view class="toptext">文昌街</view>
    </view>
    <view class="topr">进入AR体验更多内容</view>
  </view>
  <view class="viewc">
    <image src="/resources/comman/avatarUrl.jpg" class="viewicon"></image>
    <view class="viewtextv">
      <view class="viewtext">距您832m</view>
      <view class="viewtip">学习宝藏点</view>

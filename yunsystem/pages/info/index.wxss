/* yunsystem/pages/info/index.wxss */
page {
  background: #fff;
}

.topborder {
  width: 100vw;
  height: 1rpx;
  background: #eee;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.titlev {
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  position: relative;
  top: -76rpx;
  left: 32rpx;
  height: 48rpx;
  display: flex;
  justify-content: space-between;
  width: 686rpx;
}

.title {
  width: 550rpx;
}

.swiperdot {
  font-size: 24rpx;
  color: #FFFFFF;
  padding: 0rpx 20rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 24rpx;
  line-height: 48rpx;
  text-align: center;
}

.infov {
  padding: 0rpx 32rpx 32rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  color: #262626;
  margin-top: -20rpx;
}

.tabbar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  width: 100vw;
  height: 50px;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  border-top: 1rpx solid #eee;
}

.tabbaritem {
  width: 100rpx;
  padding-top: 14rpx;
  text-align: center;
}

.tabbaricon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
}

.tabbarnum {
  font-size: 22rpx;
  color: #999999;
}

.tabbarnumh {
  font-size: 22rpx;
  color: #F24540;
}

.vrbtn {
  width: 188rpx;
  height: 76rpx;
  background: rgba(242, 69, 64, 0.9);
  box-shadow: 0rpx 2rpx 16rpx 0rpx rgba(242, 69, 64, 0.5);
  border-radius: 38rpx 0rpx 0rpx 38rpx;
  position: fixed;
  top: 100rpx;
  right: 0;
  z-index: 9;
  display: flex;
  justify-content: center;
}

.vriconv {
  width: 46rpx;
  height: 46rpx;
  background: #FFFFFF;
  border-radius: 50%;
  margin: 15rpx 0;
  text-align: center;
}

.vricon {
  width: 30rpx;
  height: 20rpx;
  margin: 16rpx auto;
}

.vrtxt {
  margin-left: 10rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 26rpx;
  color: #FFFFFF;
}

/*视频播放*/
.videobtn {
  width: 188rpx;
  height: 76rpx;
  background: rgba(255,255,255,0.9000);
  box-shadow: 0px 2px 16px 0px rgba(0,0,0,0.2);
  border-radius: 38rpx 0rpx 0rpx 38rpx;
  position: fixed;
  top: 200rpx;
  right: 0;
  z-index: 9;
  display: flex;
  justify-content: center;
}

.videoiconv {
  width: 42rpx;
  height: 42rpx;
  background: #FFFFFF;
  border-radius: 50%;
  margin: 15rpx 0;
  text-align: center;
  border: 2rpx solid #F24540;
}

.videoicon {
  width: 18rpx;
  height: 22rpx;
  margin: 10rpx auto;
}

.videotxt {
  margin-left: 10rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 26rpx;
  color: #F24540;
}
/* yunsystem/pages/record/index.wxss */

.bodyv {
  width: 100vw;
  height: calc(100vh - 140rpx);
  background: #f2f2f2;
}

.date {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.recordv{
  display: flex;
  flex-wrap: wrap;
  padding-left:20rpx;
}
.recordc{
  margin-right: 20rpx;
  width: 223rpx;
  margin-bottom: 32rpx;
}
.recordcover{
  width: 223rpx;
  height: 223rpx;
  border-radius: 4rpx;
}
.name{  
font-size: 24rpx;
color: #124361;
}

.tabbar {
  width: 100vw;
  height: 140rpx;
  display: flex;
  justify-content: space-around;
  position: relative;
  background: #fff;
}

.tabbarc {
  width: 160rpx;
  height: 140rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.tabbaricon1 {
  width: 38rpx;
  height: 42rpx;
  margin-bottom: 10rpx;
}

.tabbaricon2 {
  width: 43rpx;
  height: 42rpx;
  margin-bottom: 10rpx;
}

.tabbartxth {
  font-size: 24rpx;
  font-weight: 500;
  color: #124361;
}

.tabbartxt {
  font-size: 24rpx;
  font-weight: 500;
  color: #999;
}

.scan {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: -73rpx;
}
/* changzhenglu/pages/map/index.wxss */
page {
  background: #B58B60;
}

/*用户信息*/
.topbgv {
  width: 100vw;
  height: 200rpx;
}

.topbgv .pagetitlev {
  width: 555rpx;
  height: 60rpx;
  display: flex;
  padding-left: 32rpx;
}

.topbgv .backiconv {
  width: 40rpx;
  height: 60rpx;
}

.topbgv .backicon {
  width: 27rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-top: 4rpx;
}

.topbgv .pagetitle {
  width: 385rpx;
  height: 60rpx;
  text-align: left;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #000;
}

/*用户信息*/
.userv {
  width: 270rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  border: 2rpx solid #EEEEEE;
  display: flex;
  margin-left: 32rpx;
}

.userv .avatarUrl {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  margin-top: 10rpx;
  margin-left: 12rpx;
}

.userv .nickname {
  width: 150rpx;
  margin: 0 12rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  color: #262626;
}

.userv .righticon {
  width: 12rpx;
  height: 20rpx;
  margin-top: 26rpx;
}

/*定位icon*/
.postionv {
  width: 60rpx;
  height: 60rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.25);
  border-radius: 12rpx;
  position: absolute;
  z-index: 99;
  left: 32rpx;
  bottom: 362rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
  justify-self: center;
}
.postion{
  width: 44rpx;
  height: 44rpx;
  margin: 0 auto;
}
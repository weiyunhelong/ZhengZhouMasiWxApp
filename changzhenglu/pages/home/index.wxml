<!--changzhenglu/pages/home/index.wxml-->
<!--顶部用户信息-->
<view class="topbgv" bindtap="hideMaskOpt" style="background:url(../../resources/bg.png) no-repeat;background-size: cover;">
  <view style="width: 100vw;height:{{navigationBarHeight}}px;margin-bottom: 10rpx;"></view>
  <view class="pagetitlev" catchtap="goBackOpt">
    <view class="backiconv">
      <image src="/resources/comman/backiconb.png" class="backicon"></image>
    </view>
    <view class="pagetitle">重走长征路</view>
  </view>
</view>

<!--用户信息-->
<view class="userinfov">
  <view class="userv" bindtap="showMaskOpt">
    <image src="/resources/comman/avatarUrl.jpg" mode="aspectFill" class="avatarUrl"></image>
    <view class="nickname">长征突击手</view>
    <image src="../../resources/right.png" class="righticon"></image>
  </view>
  <view class="mdprogress-box">
    <view class="mdprogress-circle"></view>
    <view class="mdprogress-rotate" style="transform:rotate(60deg)"></view>
    <view class="mdprogress-inner-circle">
      <view class="inner-circle-txt">今日步数</view>
      <view class="inner-circle-num">2234</view>
    </view>
  </view>
  <view class="mdprogress-dot">5000</view>

  <view class="currrankv">
    <text>距离</text>
    <image src="/resources/comman/avatarUrl.jpg" mode="aspectFill" class="smavatar"></image>
    <text>马斯特、相差93里程，长征榜排名第34</text>
  </view>
</view>
<view class="btn" bindtap="goMapOpt">进入长征</view>

